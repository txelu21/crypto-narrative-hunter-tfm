# Database (defaults match docker-compose.yml)
DATABASE_URL=postgresql://user:password@localhost:5432/crypto_narratives
# If running inside docker network, use host "database" instead of localhost
# DATABASE_URL=postgresql://user:password@database:5432/crypto_narratives

# API Keys (fill when needed)
DUNE_API_KEY=
ALCHEMY_API_KEY=
ETHERSCAN_API_KEY=
COINGECKO_API_KEY=

# Logging
LOG_LEVEL=INFO
LOG_DIR=./logs

# HTTP Settings (security)
HTTP_TIMEOUT=30  # seconds
TLS_VERIFY=true  # always verify TLS certificates
MAX_RETRIES=5    # max number of retries for API calls
